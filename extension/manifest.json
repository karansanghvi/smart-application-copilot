{
  "manifest_version": 3,
  "name": "JobFlow - Smart Application Copilot",
  "version": "1.0.0",
  "description": "AI-powered job application assistant with auto-fill capabilities",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icons/icon (Custom).png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "index.html",
        "dashboard.html",
        "css/*",
        "js/*",
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/icon (Custom).png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' http://localhost:3000 https://your-api-domain.com;"
  }
}